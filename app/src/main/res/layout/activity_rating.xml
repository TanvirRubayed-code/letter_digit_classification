<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical"
    tools:context=".java.RatingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/undraw_reviews_image"
        app:civ_border_width="2dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Your opinion matters to us!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We work super hard to make this app better for you, and would love to know how would you rate our app?"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#555555"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:rating="4.5"
        android:progressBackgroundTint="@color/statusbar"
        android:progressTint="#FFC561"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/submit_rating"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/statusbar"
        android:text="Submit"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/no_thanks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Thanks"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/statusbar"
        android:textStyle="bold"
        />



</LinearLayout>